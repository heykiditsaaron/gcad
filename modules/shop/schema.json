{
  "title": "Shop Editor",
  "description": "Schema for Shop generation",
  "fields": {
    "title": { "type": "string", "label": "Title", "default": "Sell" },
    "type": { "type": "string", "label": "GUI Type", "default": "GENERIC_9x6" },
    "items": {
      "type": "list",
      "label": "Items",
      "item": {
        "name": { "type": "string", "label": "Item name" },
        "itemId": { "type": "string", "label": "Minecraft ID" },
        "sell": { "type": "number", "label": "Sell price", "optional": true },
        "buy": { "type": "number", "label": "Buy price", "optional": true },
        "lore": { "type": "string", "label": "Lore (comma-separated)", "optional": true }
      }
    }
  }
}
